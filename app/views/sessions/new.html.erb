<% provide(:title, "Login") %>
<h1>Log in</h1>

<div class="row">
	<%= form_for(:session, url: login_path) do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :email %>
		<%= f.email_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.submit "Login" %>
	<% end %>
	
</div>
